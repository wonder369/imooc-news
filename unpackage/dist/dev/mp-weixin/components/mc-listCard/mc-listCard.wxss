.list-card {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 10px;
  margin: 10px;
  border-radius: 8px;
  box-shadow: 0 0 5px 1px rgba(0, 0, 0, 0.2);
}
.list-card .list-image {
  width: 60px;
  height: 60px;
  border-radius: 10px;
  overflow: hidden;
  padding-right: 10px;
}
.list-card .list-image image {
  width: 100%;
  height: 100%;
}
.list-card .list-content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.list-card .list-content .content-title {
  font-size: 14px;
  color: #333;
  font-weight: 400;
  line-height: 1.2;
}
.list-card .list-content .content-title text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.list-card .list-content .content-info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.list-card .list-content .content-info .info-type {
  color: #f07373;
  border: 1px #f07373 solid;
  padding: 0 5px;
  margin-right: 5px;
  border-radius: 15px;
  font-size: 12px;
}
.list-card .list-content .content-info .info-wacth_times {
  color: #E6E6E6;
  font-size: 10px;
}
.list-card.more-mode .list-content .content-image {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 10px 0;
}
.list-card.more-mode .list-content .content-image .image-box {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  height: 80px;
}
.list-card.more-mode .list-content .content-image .image-box image {
  width: 100%;
  height: 100%;
}
.list-card.big-mode {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.list-card.big-mode .list-image {
  width: 100%;
  height: 80px;
}

