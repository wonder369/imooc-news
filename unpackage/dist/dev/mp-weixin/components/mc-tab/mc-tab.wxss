.tab {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  border-bottom: 1px #f5f5f5 solid;
}
.tab .tab-scroll {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  overflow: hidden;
}
.tab .tab-scroll .scroll-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  /* justify-content: center; 不能加这个，加了的话scroll-view里面的文字显示不全*/
  height: 45px;
  white-space: nowrap;
}
.tab .tab-scroll .scroll-box .scroll-item {
  padding: 0 10px;
  color: #333;
  font-size: 16px;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
}
.tab .tab-scroll .scroll-box .scroll-item.active {
  color: #f07373;
}
.tab .tab-icon {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 45px;
  position: relative;
}
.tab .tab-icon:after {
  content: "";
  width: 2px;
  height: 100%;
  background-color: #f5f5f5;
  position: absolute;
  left: 0;
}

